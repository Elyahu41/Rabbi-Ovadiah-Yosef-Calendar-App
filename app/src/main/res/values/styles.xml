<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
        <item name="alertDialogStyle">@style/alertDialog</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="popupOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/overflow_menu_bg</item>
    </style>

    <style name="alertDialog" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/overflow_menu_bg</item>
    </style>

    <style name="MaterialTheme" parent="Theme.Material3.DayNight">
        <item name="android:colorPrimaryDark">@color/black</item>
    </style>

    <style name="Widget.RabbiOvadiahYosefCalendar.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>