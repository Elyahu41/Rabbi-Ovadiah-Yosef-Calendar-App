<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
        <item name="alertDialogStyle">@style/alertDialog</item>
        <item name="alertDialogTheme">@style/Theme.MaterialComponents.DayNight.Dialog.Alert</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog.Material3</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="colorButtonNormal">@color/dark_gold</item>
    </style>

    <style name="popupOverflowMenu" parent="@style/Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/overflow_menu_bg</item>
    </style>

    <style name="alertDialog" parent="@style/Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/overflow_menu_bg</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/alertDialog.button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/alertDialog.button</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/alertDialog.button</item>
        <item name="alertDialogTheme">@style/Theme.MaterialComponents.DayNight.Dialog.Alert</item>
    </style>

    <style name="zmanListAlertDialog" parent="@style/Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/overflow_menu_bg</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Theme.MaterialComponents.DayNight.Bridge</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/alertDialog.button</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/alertDialog.button</item>
        <item name="alertDialogTheme">@style/Theme.MaterialComponents.DayNight.Dialog.Alert</item>
    </style>

    <style name="alertDialog.button" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:backgroundTint">@color/dark_gold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Widget.RabbiOvadiahYosefCalendar.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>