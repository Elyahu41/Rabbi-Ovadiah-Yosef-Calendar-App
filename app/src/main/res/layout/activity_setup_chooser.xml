<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:context=".activities.FullSetupActivity">

    <TextView
        android:id="@+id/showIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/show_introduction"
        android:textStyle="bold"
        android:layout_marginBottom="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_to_make_your_zmanim_like_the_ohr_hachaim_calendar_in_israel"
            android:gravity="center"
            android:padding="8dp"/>

        <Button
            android:id="@+id/quickSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/colorful_gradient"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/quick_setup"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_to_specify_what_to_setup"
            android:gravity="center"
            android:padding="8dp"/>

        <Button
            android:id="@+id/advancedSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/colorful_gradient"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/advanced_setup"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>